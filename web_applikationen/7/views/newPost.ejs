<h1>Neuen Blogeintrag erstellen</h1>
<form action="/blog/" method="post">
    <label for="autor">Autor:</label>
    <input type="text" id="autor" name="autor" required><br>
    <label for="titel">Titel:</label>
    <input type="text" id="titel" name="titel" required><br>
    <label for="text">Text:</label>
    <textarea id="text" name="text" required></textarea><br>
    <label for="jahr">Jahr:</label>
    <input type="number" id="jahr" name="jahr" min="2000" max="2100" required><br>
    <label for="monat">Monat:</label>
    <input type="number" id="monat" name="monat" min="1" max="12" required><br>
    <label for="tag">Tag:</label>
    <input type="number" id="tag" name="tag" min="1" max="31" required><br>
    <button type="submit">Absenden</button>
</form>
